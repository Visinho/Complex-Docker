{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "Visinhp/Complex-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "Visinho/Complex-server",
            "hostname": "server",
            "essential": false
        },
        {
            "name": "worker",
            "image": "Visinho/Complex-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "Visinho/Complex-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client", "server"
            ]
        }
    ]
}